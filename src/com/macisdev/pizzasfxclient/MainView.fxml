<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" prefHeight="680.0" prefWidth="1219.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.macisdev.pizzasfxclient.MainViewController">
    <VBox prefHeight="521.0" prefWidth="730.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <MenuBar>
            <Menu mnemonicParsing="false" text="Archivo">
                <MenuItem mnemonicParsing="false" onAction="#reconnectToServer"
                          text="Conectar al servidor"/>
                <MenuItem mnemonicParsing="false" text="Salir"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Pedidos">
                <MenuItem mnemonicParsing="false" onAction="#searchOrderById" text="Consultar pedido por ID"/>
                <MenuItem mnemonicParsing="false" onAction="#searchOrdersByPhoneNumber"
                          text="Consultar pedidos por número de teléfono"/>
                <MenuItem mnemonicParsing="false" onAction="#searchAllFiledOrders"
                          text="Consultar todos los pedidos archivados"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Ayuda">
                <MenuItem mnemonicParsing="false" text="Acerca de..."/>
            </Menu>
        </MenuBar>
        <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="1219.0" spacing="40.0">
            <Label text="Gestión Pizzería">
                <font>
                    <Font name="Verdana Bold" size="37.0"/>
                </font>
            </Label>
            <Label text="Tiempo de espera:"/>
            <TextField fx:id="tfWaitingTime" onAction="#changeWaitingTime" prefHeight="31.0" prefWidth="65.0"/>
            <Button mnemonicParsing="false" onAction="#changeWaitingTime" text="Cambiar tiempo espera"/>
            <Label fx:id="statusLabel" text="Conectando...">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
        </HBox>
        <TableView fx:id="orderTable" onMouseClicked="#openOrderDetailsWindow" prefHeight="548.0" prefWidth="1219.0"
                   VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>
